brew-rmr() {
    BREW=/usr/local/bin/brew
    FORMULA="$*"

    if [ -z "$FORMULA" ]; then
        echo "No arguments!"
    else
        $BREW rm $FORMULA
        $BREW rm $(join <($BREW leaves) <($BREW deps "$FORMULA"))
    fi
}

function mkcd
{
    dir="$*"
    mkdir -p "$dir" && cd "$dir"
}

alias o='open' # I'm lazy.
alias oh='open .' # Open the current directory in Finder
alias cask='brew cask'
alias vrc='$EDITOR ~/.vimrc'
